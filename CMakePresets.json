{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "description": "Configure a Release build with MSVC and Ninja.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/msvc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "ADMC_ENABLE_AVX2": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-release",
      "displayName": "Build (MSVC Release)",
      "configurePreset": "msvc-release"
    }
  ],
  "testPresets": [
    {
      "name": "msvc-release",
      "displayName": "Test (MSVC Release)",
      "configurePreset": "msvc-release",
      "configuration": "Release"
    }
  ]
}
